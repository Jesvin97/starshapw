{
  "appId": "com.evwheels.desktop",
  "productName": "EV Wheels Management System",
  "copyright": "Copyright Â© 2024 EV Wheels Development Team",
  "directories": {
    "buildResources": "build",
    "output": "dist"
  },
  "files": [
    "out/**/*",
    "electron/**/*",
    "node_modules/**/*",
    "!node_modules/.cache/**/*",
    "!**/*.{md,txt}",
    "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
    "!**/node_modules/.bin",
    "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
    "!.editorconfig",
    "!**/._*",
    "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
    "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
    "!**/{appveyor.yml,.travis.yml,circle.yml}",
    "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
  ],
  "extraResources": [
    {
      "from": "public/",
      "to": "public/",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "publisherName": "EV Wheels Development Team",
    "verifyUpdateCodeSignature": false,
    "requestedExecutionLevel": "asInvoker",
    "artifactName": "${productName}-Setup.${ext}",
    "icon": "public/ewheels logo desktop.png"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "EV Wheels Management System"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/ewheels logo desktop.png",
    "category": "public.app-category.productivity"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "public/ewheels logo desktop.png",
    "category": "Office"
  },
"publish": {
    "provider": "github",
    "owner": "ilan2004",
    "repo": "Ev-wheels",
  },
  "buildVersion": "1.0.0"
}
